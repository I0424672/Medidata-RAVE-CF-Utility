            "   /*",
            "    @ Classification: Query",
            "    @ Introduction: Check duplicate records with date.",
            "    @ Dpt_action: Dpt_action (check action) is suggested to be the std field.",
            "    @ Note: field_oid is the date field oid; openQuery is used to judge if query should be fired; Query will be fired in last logline.",
            "    */",
            "",
            "    string field_oid = \"value\";",
            "    string querytext = \"A duplicate record with same field is present. Please update the CRF as appropriate.\";",
            "    bool openQuery = false;",
            "",
            "    ActionFunctionParams afp = (ActionFunctionParams)ThisObject;",
            "    DataPoint Dpt_action = afp.ActionDataPoint;",
            "    Subject current_subject = Dpt_action.Record.Subject;",
            "    Records all_rds = Dpt_action.Record.DataPage.Records;",
            "",
            "    try",
            "    {",
            "        Compare_duplicate_date(field_oid, querytext, all_rds, openQuery, afp);",
            "    }",
            "    catch",
            "    {",
            "    }",
            "    return null;",
            "}",
            "public void Compare_duplicate_date(string fieldOID, string querytext, Records allRecords, bool openQuery, ActionFunctionParams afp)",
            "{",
            "    DataPoint i_DP1 = null;",
            "    //for outer loop",
            "    DataPoint j_DP1 = null;",
            "    //for inner loop",
            "    if (allRecords != null && allRecords.Count > 1)",
            "    {",
            "        for (int i = allRecords.Count - 1; i > 1; i--)//count from the last one",
            "        {",
            "            i_DP1 = null;",
            "            if (allRecords[i].Active)",
            "            {",
            "                i_DP1 = allRecords[i].DataPoints.FindByFieldOID(fieldOID);// find the field of date ",
            "                if (CheckDataPoint(i_DP1) && i_DP1.ChangeCount > 0)",
            "                {",
            "                    for (int j = i - 1; j > 0 && !openQuery; j--)//count from the second last",
            "                    {",
            "                        if (allRecords[j].Active)",
            "                        {",
            "                            j_DP1 = allRecords[j].DataPoints.FindByFieldOID(fieldOID);",
            "                            if (CheckDataPoint(j_DP1) && j_DP1.ChangeCount > 0)",
            "                            {",
            "                                if ((DateTime)i_DP1.StandardValue() == (DateTime)j_DP1.StandardValue())",
            "                                    openQuery = true;",
            "                            }",
            "                        }",
            "                    }",
            "                }",
            "                //open or close query as necessary",
            "                CustomFunction.PerformQueryAction(querytext, 1, false, false, i_DP1, openQuery, afp.CheckID, afp.CheckHash);",
            "                openQuery = false;",
            "            }",
            "        }",
            "    }",
            "}",
            "",
            "public bool CheckDataPoint(DataPoint dpt)",
            "{",
            "    return dpt != null && dpt.Active && dpt.Data != string.Empty && !dpt.IsBitSet(Status.IsNonConformant);"
        ],
        "description": "A MyCF template for: Check duplicate records - Single field - Date"
