            "//Find the request datapage by locating std field and then use the data to enter into form name",
            "public void update_form_name (DataPage Dpage, DataPoint Dpt_action, string form_Name, bool conn_pass) ",
            "{",
            "    if (Dpage != null && Dpage.Active) ",
            "    {",
            "        if (Dpt_action != null && Dpt_action.Data != string.Empty && !Dpt_action.IsBitSet (Status.IsNonConformant)) ",
            "        {",
            "            Dpage.Name = form_Name + \" \" + Dpt_action.Data;",
            "            conn_pass = true;",
            "        }",
            "        //Update the form name to remove the date in the form name when there are no data entered into Dpt_action",
            "        if (!conn_pass) ",
            "        {",
            "            Dpage.Name = form_Name;",
            "        }",
            "    }"
